image: "docker.elastic.co/elasticsearch/elasticsearch-oss"
clusterName: elasticsearch
replicas: 1
minimumMasterNodes: 1
resources:
  requests:
    cpu: "250m"
    memory: "1024Mi"
  limits:
    cpu: "500m"
    memory: "1024Mi"
esJavaOpts: "-Xmx380m -Xms380m"
labels:
  branch: {{ requiredEnv "BRANCH_NAME" | quote }}
  resource: pod
  team: platform
service:
  labels:
    branch: {{ requiredEnv "BRANCH_NAME" | quote }}
    resource: service
    team: platform
tolerations:
  - key: team
    operator: Equal
    value: platform
    effect: NoSchedule
nodeSelector:
  team: platform
