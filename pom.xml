<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo.ecm.platform</groupId>
    <artifactId>nuxeo-features-parent</artifactId>
    <version>5.3.1-SNAPSHOT</version>
  </parent>

  <groupId>org.nuxeo.dam</groupId>
  <artifactId>nuxeo-dam-parent</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>Nuxeo DAM Parent</name>
  <packaging>pom</packaging>
  <description>Nuxeo DAM Parent</description>

  <profiles>
    <profile>
      <id>nuxeo-dam-wo-distribution</id>
      <modules>
        <module>nuxeo-dam-api</module>
        <module>nuxeo-dam-core</module>
        <module>nuxeo-dam-facade</module>
        <module>nuxeo-dam-webapp-core</module>
        <module>nuxeo-dam-webapp</module>
        <module>nuxeo-dam-webapp-override</module>
        <module>nuxeo-dam-lang</module>
        <module>nuxeo-dam-test</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-dam-all</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>nuxeo-dam-api</module>
        <module>nuxeo-dam-core</module>
        <module>nuxeo-dam-facade</module>
        <module>nuxeo-dam-webapp-core</module>
        <module>nuxeo-dam-webapp</module>
        <module>nuxeo-dam-webapp-override</module>
        <module>nuxeo-dam-lang</module>
        <module>nuxeo-dam-test</module>
        <module>nuxeo-dam-distribution</module>
      </modules>
    </profile>
  </profiles>

  <properties>
    <nuxeo.dam.version>${pom.version}</nuxeo.dam.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-api</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-core</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-facade</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-test</artifactId>
        <version>${nuxeo.dam.version}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-webapp-core</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-webapp</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-webapp-override</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-lang</artifactId>
        <version>${nuxeo.dam.version}</version>
      </dependency>

      <dependency>
        <groupId>org.nuxeo.runtime</groupId>
        <artifactId>nuxeo-runtime-deploy</artifactId>
        <version>${nuxeo.runtime.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.runtime</groupId>
        <artifactId>nuxeo-runtime-jetty-adapter</artifactId>
        <version>${nuxeo.runtime.version}</version>
      </dependency>

      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform</artifactId>
        <type>ejb</type>
        <version>${nuxeo.services.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-actions-core</artifactId>
        <type>ejb</type>
        <version>${nuxeo.services.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-ear</artifactId>
        <version>${nuxeo.features.version}</version>
        <type>pom</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-annotations-core-contrib</artifactId>
        <version>${nuxeo.features.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-video-core</artifactId>
        <version>${nuxeo.features.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-audio-core</artifactId>
        <version>${nuxeo.features.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-document-categorization</artifactId>
        <version>${nuxeo.features.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-jbossws-wrapper</artifactId>
        <version>4.0.5.GA</version>
      </dependency>

      <!-- Dependencies on our custom branch in Nuxeo -->
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-webapp-base</artifactId>
        <version>${nuxeo.jsf.version}</version>
      </dependency>

      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-ui-web</artifactId>
        <version>${nuxeo.jsf.version}</version>
      </dependency>

      <dependency>
        <groupId>de.schlichtherle.io</groupId>
        <artifactId>truezip</artifactId>
        <version>6.6</version>
      </dependency>

      <dependency>
        <groupId>org.nuxeo.ecm.core</groupId>
        <artifactId>nuxeo-core-storage-sql-test</artifactId>
        <version>${nuxeo.core.version}</version>
      </dependency>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.7</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.4.2</version>
        <configuration>
          <systemProperties>
            <property>
              <name>net.sourceforge.cobertura.datafile</name>
              <value>${project.build.directory}/cobertura/cobertura.ser</value>
            </property>
          </systemProperties>
          <includes>
            <include>**/*Test*.java</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.nuxeo.org/public</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/public-snapshot</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>public</id>
      <url>http://maven.nuxeo.org/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
    </pluginRepository>
    <pluginRepository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/public-snapshot</url>
      <name>Nuxeo virtual snapshot repository</name>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
</project>
