<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo</groupId>
    <artifactId>nuxeo-addons-parent</artifactId>
    <version>5.9.6-SNAPSHOT</version>
    <relativePath>../addons/pom.xml</relativePath>
  </parent>

  <groupId>org.nuxeo.ecm.distribution</groupId>
  <artifactId>nuxeo-distribution</artifactId>
  <packaging>pom</packaging>
  <name>Nuxeo Distribution Parent</name>
  <description>Build package distributions of nuxeo applications</description>

  <prerequisites>
    <maven>3.1.1</maven>
  </prerequisites>

  <properties>
    <nuxeo.distribution.version>5.9.6-SNAPSHOT</nuxeo.distribution.version>
  </properties>

  <modules>
    <module>nuxeo-functional-tests</module>
    <module>nuxeo-startup-wizard</module>
    <module>nuxeo-launcher</module>
    <module>nuxeo-distribution-resources</module>
    <module>nuxeo-distribution-tests</module>
  </modules>

  <profiles>
    <profile>
      <id>nuxeo-coreserver</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-cap</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-dm</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-marketplace-dm</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-dam</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-marketplace-dam</module>
      </modules>
    </profile>
    <profile>
      <!-- Build Tomcat distributions -->
      <id>tomcat</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-marketplace-dm</module>
        <module>nuxeo-marketplace-dam</module>
        <module>nuxeo-distribution-social-collaboration</module>
        <module>nuxeo-marketplace-social-collaboration</module>
        <module>nuxeo-distribution-tomcat</module>
      </modules>
    </profile>
    <profile>
      <!-- Build all distributions -->
      <id>all-distributions</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-marketplace-dm</module>
        <module>nuxeo-marketplace-dam</module>
        <module>nuxeo-distribution-social-collaboration</module>
        <module>nuxeo-marketplace-social-collaboration</module>
        <module>nuxeo-distribution-tomcat</module>
        <module>nuxeo-functional-tests</module>
      </modules>
    </profile>
    <profile>
      <!-- Run all tests -->
      <id>all-tests</id>
      <modules>
        <module>nuxeo-distribution-tomcat-wizard-tests</module>
        <module>nuxeo-distribution-cap/ftest/webdriver</module>
        <module>nuxeo-distribution-dm/ftest/webdriver</module>
        <module>nuxeo-distribution-dm/ftest/selenium</module>
        <module>nuxeo-distribution-dm/ftest/funkload</module>
        <module>nuxeo-distribution-social-collaboration/ftest/selenium</module>
        <module>nuxeo-marketplace-dam/ftest/webdriver</module>
      </modules>
    </profile>
    <profile>
      <id>itest</id>
      <modules>
        <module>nuxeo-distribution-tomcat-wizard-tests</module>
      </modules>
    </profile>
    <profile>
      <id>ftest-dm</id>
      <modules>
        <module>nuxeo-distribution-cap/ftest/webdriver</module>
        <module>nuxeo-distribution-dm/ftest/webdriver</module>
        <module>nuxeo-distribution-dm/ftest/selenium</module>
      </modules>
    </profile>
    <profile>
      <id>fltest-dm</id>
      <modules>
        <module>nuxeo-distribution-dm/ftest/funkload</module>
      </modules>
    </profile>
    <profile>
      <!-- WARN: conflicts with the "ftest" profile in nuxeo-marketplace-dam -->
      <id>ftest-dam</id>
      <modules>
        <module>nuxeo-marketplace-dam/ftest/webdriver</module>
      </modules>
    </profile>
    <profile>
      <id>ftest-sc</id>
      <modules>
        <module>nuxeo-distribution-social-collaboration/ftest/selenium</module>
      </modules>
    </profile>
    <profile>
      <!-- Build SDK distributions for use in Nuxeo IDE -->
      <id>sdk</id>
    </profile>
    <!-- For use by Nuxeo internal QA -->
    <profile>
      <id>qa</id>
      <repositories>
        <repository>
          <id>internal-releases</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/groups/internal-releases
          </url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>internal-snapshots</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/groups/internal-snapshots
          </url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>internal-releases</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/groups/internal-releases
          </url>
          <name>Nuxeo virtual release repository</name>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>internal-snapshots</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/groups/internal-snapshots
          </url>
          <name>Nuxeo virtual snapshot repository</name>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <updatePolicy>always</updatePolicy>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
      <distributionManagement>
        <snapshotRepository>
          <id>daily-snapshots</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/repositories/daily-snapshots
          </url>
        </snapshotRepository>
      </distributionManagement>
    </profile>
    <profile>
      <id>nightly</id>
      <repositories>
        <repository>
          <id>nightly-staging</id>
          <url>http://maven.in.nuxeo.com/nexus/content/repositories/nightly-staging</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>
    </profile>
  </profiles>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-coreserver</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-coreserver</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>pom</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-cap</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>pom</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-cap</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-dm</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>pom</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-dm</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-marketplace-dm</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.marketplace.dam</groupId>
        <artifactId>marketplace-dam</artifactId>
        <classifier>nxr</classifier>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.marketplace.dam</groupId>
        <artifactId>marketplace-dam</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-marketplace-social-collaboration</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-tomcat</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>coreserver</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-tomcat</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>coreserver-sdk</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-tomcat</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>nuxeo-cap</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-tomcat</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>nuxeo-cap-sdk</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-resources</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>doc</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-resources</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>root</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-resources</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>bin</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-resources</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>templates-common</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-resources</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>templates-common-dm</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-resources</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>templates-tomcat</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-resources</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>templates-tomcat-coreserver</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-startup-wizard</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>war</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo</groupId>
        <artifactId>nuxeo-launcher</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <classifier>jar-with-dependencies</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-social-collaboration</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-social-collaboration</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>resources</classifier>
      </dependency>

      <!-- Test scope -->
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-functional-tests</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.dam</groupId>
        <artifactId>nuxeo-dam-functional-tests</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-tests</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>pom</type>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-cap-webdriver-tests</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>test-jar</type>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-dm-webdriver-tests</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <scope>test</scope>
        <type>test-jar</type>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <scm>
    <connection>scm:git:git://github.com/nuxeo/nuxeo-distribution.git</connection>
    <developerConnection>scm:git:ssh://git@github.com:nuxeo/nuxeo-distribution.git</developerConnection>
    <url>https://github.com/nuxeo/nuxeo-distribution</url>
  </scm>

  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <name>Nuxeo virtual release repository</name>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
    <pluginRepository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <name>Nuxeo virtual snapshot repository</name>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

</project>
