<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo</groupId>
    <artifactId>nuxeo-addons-parent</artifactId>
    <version>5.8-SNAPSHOT</version>
  </parent>

  <groupId>org.nuxeo.ecm.distribution</groupId>
  <artifactId>nuxeo-distribution</artifactId>
  <packaging>pom</packaging>
  <name>Nuxeo Distribution Parent</name>
  <description>Build package distributions of nuxeo applications</description>

  <properties>
    <nuxeo.distribution.version>5.8-SNAPSHOT</nuxeo.distribution.version>
  </properties>

  <modules>
    <module>nuxeo-functional-tests</module>
    <module>nuxeo-dam-functional-tests</module>
    <module>nuxeo-startup-wizard</module>
    <module>nuxeo-launcher</module>
    <module>nuxeo-distribution-resources</module>
    <module>nuxeo-distribution-tests</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <execution>
            <id>enforce-versions</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <requireMavenVersion>
                  <version>[2.2.1,3.0)</version>
                </requireMavenVersion>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>nuxeo-coreserver</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-cap</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-marketplace-rest-api</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-dm</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-marketplace-rest-api</module>
        <module>nuxeo-marketplace-dm</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-dam</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-marketplace-rest-api</module>
        <module>nuxeo-marketplace-dam</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-cmf</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-marketplace-rest-api</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-cmf</module>
        <module>nuxeo-marketplace-cmf</module>
      </modules>
    </profile>
    <profile>
      <!-- Build JBoss distributions -->
      <id>jboss</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-marketplace-dm</module>
        <module>nuxeo-marketplace-dam</module>
        <module>nuxeo-marketplace-rest-api</module>
        <module>nuxeo-distribution-social-collaboration</module>
        <module>nuxeo-marketplace-social-collaboration</module>
        <module>nuxeo-distribution-cmf</module>
        <module>nuxeo-marketplace-cmf</module>
        <module>nuxeo-distribution-jboss</module>
      </modules>
    </profile>
    <profile>
      <!-- Build Tomcat distributions -->
      <id>tomcat</id>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-marketplace-dm</module>
        <module>nuxeo-marketplace-dam</module>
        <module>nuxeo-marketplace-rest-api</module>
        <module>nuxeo-distribution-social-collaboration</module>
        <module>nuxeo-marketplace-social-collaboration</module>
        <module>nuxeo-distribution-cmf</module>
        <module>nuxeo-marketplace-cmf</module>
        <module>nuxeo-distribution-tomcat</module>
      </modules>
    </profile>
    <profile>
      <!-- Build all distributions -->
      <id>all-distributions</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>nuxeo-distribution-coreserver</module>
        <module>nuxeo-distribution-cap</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-marketplace-dm</module>
        <module>nuxeo-marketplace-dam</module>
        <module>nuxeo-marketplace-rest-api</module>
        <module>nuxeo-distribution-social-collaboration</module>
        <module>nuxeo-marketplace-social-collaboration</module>
        <module>nuxeo-distribution-cmf</module>
        <module>nuxeo-marketplace-cmf</module>
        <module>nuxeo-distribution-jboss</module>
        <module>nuxeo-distribution-tomcat</module>
        <module>nuxeo-functional-tests</module>
      </modules>
    </profile>
    <profile>
      <!-- Run all tests -->
      <id>all-tests</id>
      <modules>
        <module>nuxeo-distribution-tomcat-wizard-tests</module>
        <module>nuxeo-distribution-dm/ftest/webdriver</module>
        <module>nuxeo-distribution-dm/ftest/selenium</module>
        <module>nuxeo-distribution-dm/ftest/funkload</module>
        <!-- temporarily DEACTIVATE CMF Selenium tests -->
        <!-- <module>nuxeo-distribution-cmf/ftest/selenium</module> -->
        <module>nuxeo-distribution-social-collaboration/ftest/selenium</module>
        <module>nuxeo-marketplace-dam/ftest/webdriver</module>
      </modules>
    </profile>
    <profile>
      <id>itest</id>
      <modules>
        <module>nuxeo-distribution-tomcat-wizard-tests</module>
      </modules>
    </profile>
    <profile>
      <id>ftest-dm</id>
      <modules>
        <module>nuxeo-distribution-dm/ftest/webdriver</module>
        <module>nuxeo-distribution-dm/ftest/selenium</module>
      </modules>
    </profile>
    <profile>
      <id>fltest-dm</id>
      <modules>
        <module>nuxeo-distribution-dm/ftest/funkload</module>
      </modules>
    </profile>
    <profile>
      <id>ftest-dam</id>
      <modules>
        <module>nuxeo-marketplace-dam/ftest/webdriver</module>
      </modules>
    </profile>
    <profile>
      <id>ftest-cmf</id>
      <modules>
        <module>nuxeo-distribution-cmf/ftest/selenium</module>
      </modules>
    </profile>
    <profile>
      <id>ftest-sc</id>
      <modules>
        <module>nuxeo-distribution-social-collaboration/ftest/selenium</module>
      </modules>
    </profile>
    <profile>
      <!-- Build SDK distributions for use in Nuxeo IDE -->
      <id>sdk</id>
    </profile>
    <!-- For use by Nuxeo internal QA -->
    <profile>
      <id>qa</id>
      <repositories>
        <repository>
          <id>internal-releases</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/groups/internal-releases
          </url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>internal-snapshots</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/groups/internal-snapshots
          </url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>internal-releases</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/groups/internal-releases
          </url>
          <name>Nuxeo virtual release repository</name>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>internal-snapshots</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/groups/internal-snapshots
          </url>
          <name>Nuxeo virtual snapshot repository</name>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <updatePolicy>always</updatePolicy>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
      <distributionManagement>
        <snapshotRepository>
          <id>daily-snapshots</id>
          <url>
            http://maven.in.nuxeo.com/nexus/content/repositories/daily-snapshots
          </url>
        </snapshotRepository>
      </distributionManagement>
    </profile>
    <profile>
      <id>nightly</id>
      <repositories>
        <repository>
          <id>nightly-staging</id>
          <url>http://maven.in.nuxeo.com/nexus/content/repositories/nightly-staging</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>
    </profile>
  </profiles>

