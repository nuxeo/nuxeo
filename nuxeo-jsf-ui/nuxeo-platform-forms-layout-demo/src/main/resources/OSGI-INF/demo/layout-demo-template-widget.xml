<?xml version="1.0"?>

<component
  name="org.nuxeo.ecm.platform.forms.layoutDemo.templateWidget.contrib">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="templateWidgetLayout">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>templateWidget</widget>
        </row>
      </rows>
      <widget name="templateWidget" type="template">
        <labels>
          <label mode="any">Template widget</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>lds:stringField</field>
        </fields>
        <properties widgetMode="edit">
          <!-- TODO -->
          <property name="template"></property>
        </properties>
      </widget>
    </layout>
  </extension>

</component>
