<?xml version="1.0"?>

<component
  name="org.nuxeo.ecm.platform.forms.layoutDemo.selectManyCheckboxDirectoryAggregateLocalizedWidget.contrib">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="selectManyCheckboxDirectoryAggregateLocalized">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>widget</widget>
        </row>
      </rows>
      <widget name="widget" type="selectManyCheckboxDirectoryAggregate">
        <labels>
          <label mode="any">Aggregates</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>lds:stringList</field>
        </fields>
        <properties widgetMode="edit">
          <property name="directoryName">continent</property>
          <property name="localize">true</property>
          <property name="selectOptions">
            #{layoutDemoAggregates['dir_terms_translated'].buckets}
          </property>
        </properties>
        <controls mode="any">
          <!-- enable ajax submit on change/click/select on demo application -->
          <control name="supportInsideInputWidgetEffects">true</control>
        </controls>
      </widget>
    </layout>

  </extension>

</component>