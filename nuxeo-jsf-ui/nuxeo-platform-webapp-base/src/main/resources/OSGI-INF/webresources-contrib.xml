<?xml version="1.0"?>

<component name="org.nuxeo.ecm.webapp.base.webresources.contrib">

  <extension target="org.nuxeo.ecm.platform.WebResources" point="resources">

    <resource name="jquery.client.js">
      <uri>/scripts/dnd/jquery.client.js</uri>
    </resource>
    <resource name="jquery.dnd-file-upload.js">
      <uri>/scripts/dnd/jquery.dnd-file-upload.js</uri>
    </resource>
    <resource name="nxdropzone.js">
      <uri>/scripts/dnd/nxdropzone.js</uri>
    </resource>
    <resource name="nxinternaldnd.js">
      <uri>/scripts/dnd/nxinternaldnd.js</uri>
    </resource>

  </extension>

  <extension target="org.nuxeo.ecm.platform.WebResources" point="bundles">

    <!-- main bundle with all basic includes -->
    <bundle name="dnd_common">
      <resources>
        <resource>jquery.client.js</resource>
        <resource>jquery.dnd-file-upload.js</resource>
        <resource>nxdropzone.js</resource>
        <resource>nxinternaldnd.js</resource>
      </resources>
    </bundle>

  </extension>

</component>
