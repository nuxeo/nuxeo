<?xml version="1.0"?>

<component name="org.nuxeo.ecm.webengine.audit">

  <require>org.nuxeo.ecm.platform.audit.service.NXAuditEventsService</require>

  <extension target="org.nuxeo.ecm.platform.audit.service.NXAuditEventsService"
    point="hibernateOptions">
    <activationOptions datasource="jdbc/nxaudits"/>
  </extension>

  <require>org.nuxeo.ecm.core.listener.CoreEventListenerService</require>

  <extension
          target="org.nuxeo.ecm.core.listener.CoreEventListenerService"
          point="listener">
          <listener name="audit"
          class="org.nuxeo.ecm.platform.audit.AuditEventListener">
          </listener>
  </extension>

</component>
