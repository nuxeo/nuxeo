<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.liveconnect.core.pageprovider">

  <extension target="org.nuxeo.ecm.platform.query.api.PageProviderService"
    point="providers">

    <coreQueryPageProvider name="core_document_to_be_updated">
      <property name="maxResults">PAGE_SIZE</property>
      <pattern>
       SELECT * FROM Document WHERE content/data LIKE 'core:%' AND ecm:isVersion = 0
      </pattern>
      <sort column="ecm:uuid" ascending="true" />
      <pageSize>50</pageSize>
    </coreQueryPageProvider>

  </extension>

</component>