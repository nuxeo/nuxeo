<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.nuxeo.ecm</groupId>
    <artifactId>nuxeo-drive-parent</artifactId>
    <version>2021.44-SNAPSHOT</version>
  </parent>

  <artifactId>nuxeo-drive-bench</artifactId>
  <name>Nuxeo Drive Gatling Bench</name>
  <description>Gatling bench for Nuxeo Drive</description>
  <packaging>pom</packaging>

  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <encoding>UTF-8</encoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>io.gatling.highcharts</groupId>
      <artifactId>gatling-charts-highcharts</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm</groupId>
      <artifactId>nuxeo-drive-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm</groupId>
      <artifactId>nuxeo-drive-operations</artifactId>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm</groupId>
      <artifactId>nuxeo-drive-elasticsearch</artifactId>
      <exclusions>
        <!-- exclude netty client from elasticsearch because it conflicts with gatling (4.0.x vs 4.1.y) -->
        <exclusion>
          <groupId>org.elasticsearch.plugin</groupId>
          <artifactId>transport-netty3-client</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.elasticsearch.plugin</groupId>
          <artifactId>transport-netty4-client</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.distribution</groupId>
      <artifactId>nuxeo-server-tomcat</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <testSourceDirectory>src/test/scala</testSourceDirectory>
    <plugins>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>scala-compile</id>
            <goals>
              <goal>testCompile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <!-- Run all [matching] tests] on mvn integration-test -->
        <groupId>io.gatling</groupId>
        <artifactId>gatling-maven-plugin</artifactId>
        <configuration>
          <resourcesFolder>src/test/resources/data</resourcesFolder>
          <resultsFolder>target/gatling/results</resultsFolder>
          <simulationsFolder>src/test/scala</simulationsFolder>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.nuxeo.build</groupId>
        <artifactId>ant-assembly-maven-plugin</artifactId>
        <configuration>
          <buildFile>${basedir}/itests.xml</buildFile>
        </configuration>
        <executions>
          <execution>
            <id>start-nuxeo</id>
            <phase>pre-integration-test</phase>
            <goals>
              <!-- Goal mapped on package phase by default -->
              <goal>build</goal>
            </goals>
            <configuration>
              <targets>
                <target>prepare-environment</target>
                <target>tune-nuxeo</target>
                <target>add-custom-template</target>
                <target>copy-drive-bundles</target>
                <target>start</target>
              </targets>
            </configuration>
          </execution>
          <execution>
            <id>stop-nuxeo</id>
            <phase>post-integration-test</phase>
            <goals>
              <!-- Goal mapped on package phase by default -->
              <goal>build</goal>
            </goals>
            <configuration>
              <targets>
                <target>stop</target>
                <target>cleanup-environment</target>
              </targets>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>tomcat</id>
    </profile>
    <profile>
      <id>polling</id>
      <build>
        <plugins>
          <plugin>
            <groupId>io.gatling</groupId>
            <artifactId>gatling-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>setup-polling</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <simulationClass>org.nuxeo.drive.bench.Sim00SetupPolling</simulationClass>
                </configuration>
              </execution>
              <execution>
                <id>bench-polling</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <simulationClass>org.nuxeo.drive.bench.Sim10BenchPolling</simulationClass>
                  <jvmArgs>
                    <jvmArg>-Xms1g</jvmArg>
                    <jvmArg>-Xmx2g</jvmArg>
                  </jvmArgs>
                </configuration>
              </execution>
              <execution>
                <id>cleanup-polling</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <simulationClass>org.nuxeo.drive.bench.Sim20CleanupPolling</simulationClass>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>remote-scan</id>
      <build>
        <plugins>
          <plugin>
            <groupId>io.gatling</groupId>
            <artifactId>gatling-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>setup-remote-scan</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <simulationClass>org.nuxeo.drive.bench.Sim30SetupRemoteScan</simulationClass>
                </configuration>
              </execution>
              <execution>
                <id>bench-recursive-remote-scan</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <simulationClass>org.nuxeo.drive.bench.Sim40BenchRecursiveRemoteScan</simulationClass>
                  <jvmArgs>
                    <jvmArg>-Xms1g</jvmArg>
                    <jvmArg>-Xmx2g</jvmArg>
                  </jvmArgs>
                </configuration>
              </execution>
              <execution>
                <id>bench-batched-remote-scan</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <simulationClass>org.nuxeo.drive.bench.Sim45BenchBatchedRemoteScan</simulationClass>
                  <jvmArgs>
                    <jvmArg>-Xms1g</jvmArg>
                    <jvmArg>-Xmx2g</jvmArg>
                  </jvmArgs>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>cleanup-remote-scan</id>
      <build>
        <plugins>
          <plugin>
            <groupId>io.gatling</groupId>
            <artifactId>gatling-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>cleanup-remote-scan</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <simulationClass>org.nuxeo.drive.bench.Sim50CleanupRemoteScan</simulationClass>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>