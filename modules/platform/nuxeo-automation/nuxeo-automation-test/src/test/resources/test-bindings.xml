<component name="org.nuxeo.ecm.automation.server.test-bindings" version="1.0">

  <extension target="org.nuxeo.ecm.automation.server.AutomationServer" point="bindings">
    <binding name="principals" chain="true" disabled="true" />
    <binding name="audit" chain="true">
      <administrator>true</administrator>
      <secure>true</secure>
      <groups>members</groups>
    </binding>
  </extension>

  <extension target="org.nuxeo.ecm.automation.io.services.IOComponent" point="codecs">
    <codec class="org.nuxeo.ecm.automation.server.test.MyObjectCodec" />
    <codec class="org.nuxeo.ecm.automation.server.test.json.SimplePojoObjectCodec" />
  </extension>

  <extension target="org.nuxeo.ecm.core.operation.OperationServiceComponent" point="operations">
    <operation class="org.nuxeo.ecm.automation.server.test.ExitOperation" />
    <operation class="org.nuxeo.ecm.automation.server.test.ReturnOperation" />
    <operation class="org.nuxeo.ecm.automation.server.test.TestNumberParamAdaptersOperation" />
    <operation class="org.nuxeo.ecm.automation.server.test.WaitForTxTimeoutOperation" />
    <operation class="org.nuxeo.ecm.automation.server.test.json.NestedJSONOperation" />
    <operation class="org.nuxeo.ecm.automation.server.test.json.JSONOperationWithArrays" />
    <operation class="org.nuxeo.ecm.automation.test.helpers.HttpStatusOperationTest" />
    <operation class="org.nuxeo.ecm.automation.server.test.operations.ContextTraceOperation" />
    <operation class="org.nuxeo.ecm.automation.server.test.operations.ContextInjectionOperation" />
  </extension>


  <extension target="org.nuxeo.ecm.core.operation.OperationServiceComponent" point="chains">
    <chain id="testchain">
      <operation id="Context.FetchDocument" />
      <operation id="Document.Create">
        <param type="string" name="type">Note</param>
        <param type="string" name="name">chain.doc</param>
      </operation>
    </chain>

    <chain id="testChainTrace">
      <operation id="Context.FetchDocument" />
      <operation id="Context.SetVar">
        <param type="string" name="name">name</param>
        <param type="string" name="value">chain.doc</param>
      </operation>
      <operation id="Document.Create">
        <param type="string" name="type">Note</param>
        <param type="string" name="name">expr:Context.get("name")</param>
      </operation>
    </chain>

    <chain id="principals">
      <operation id="Context.FetchDocument" />
      <operation id="Document.Create">
        <param type="string" name="type">Note</param>
        <param type="string" name="name">chain.doc</param>
      </operation>
    </chain>

    <chain id="exitNoRollback">
      <operation id="Context.FetchDocument" />
      <operation id="Document.Create">
        <param type="string" name="type">Note</param>
        <param type="string" name="name">test-exit1</param>
      </operation>
      <operation id="Test.Exit">
      </operation>
    </chain>

    <chain id="exitRollback">
      <operation id="Context.FetchDocument" />
      <operation id="Document.Create">
        <param type="string" name="type">Note</param>
        <param type="string" name="name">test-exit2</param>
      </operation>
      <operation id="Test.Exit">
        <param type="boolean" name="error">false</param>
        <param type="boolean" name="rollback">true</param>
      </operation>
    </chain>

    <chain id="exitError">
      <operation id="Context.FetchDocument" />
      <operation id="Document.Create">
        <param type="string" name="type">Note</param>
        <param type="string" name="name">test-exit3</param>
      </operation>
      <operation id="Test.Exit">
        <param type="boolean" name="error">true</param>
        <param type="boolean" name="rollback">true</param>
      </operation>
    </chain>

    <chain id="traceSubchains">
      <operation id="Context.FetchDocument" />
    </chain>

    <chain id="mvelSubChain">
      <operation id="ContextTraceOperation">
        <param type="string" name="param">expr:Context["item"]</param>
      </operation>
    </chain>
  </extension>

</component>
