        <widget jsfcomponent="h:inputTextarea" schemaname="dublincore"
          fieldname="description" />
      </layout>
    </type>

    <type id="Section">
      <label>Section</label>
      <icon>/icons/folder.gif</icon>
      <icon-expanded>/icons/folder_open.gif</icon-expanded>
      <default-view>view_documents</default-view>
      <!-- new layout config -->
      <layouts mode="any">
