{
  "max_ngram_diff": 8,
  "number_of_replicas": 0,
  "number_of_shards": 1,
  "analysis": {
    "filter": {
      "truncate_filter": {
        "length": 256,
        "type": "truncate"
      },
      "en_stem_filter": {
        "name": "minimal_english",
        "type": "stemmer"
      },
      "en_stop_filter": {
        "stopwords": [
          "_english_"
        ],
        "type": "stop"
      },
      "word_delimiter_filter": {
        "type": "word_delimiter",
        "preserve_original": true
      },
      "asciifolding_filter": {
        "type": "asciifolding",
        "preserve_original": true
      }
    },
    "tokenizer": {
      "path_tokenizer": {
        "delimiter": "/",
        "type": "path_hierarchy"
      },
      "ngram_tokenizer": {
        "type": "nGram",
        "min_gram": 3,
        "max_gram": 10
      }
    },
    "analyzer": {
      "fulltext": {
        "filter": [
          "word_delimiter_filter",
          "lowercase",
          "en_stop_filter",
          "en_stem_filter",
          "asciifolding_filter"
        ],
        "type": "custom",
        "tokenizer": "standard"
      },
      "path_analyzer": {
        "type": "custom",
        "tokenizer": "path_tokenizer"
      },
      "lowercase_analyzer": {
        "type": "custom",
        "filter": [
          "lowercase",
          "asciifolding"
        ],
        "tokenizer": "keyword"
      },
      "ngram_analyzer": {
        "type": "custom",
        "filter": [
          "lowercase"
        ],
        "tokenizer": "ngram_tokenizer"
      },
      "default": {
        "type": "custom",
        "tokenizer": "keyword",
        "filter": [
          "truncate_filter"
        ]
      }
    }
  }
}
