<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.types.core.test">

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="schema1" src="schemas/schema1.xsd"/>
    <schema name="schema2" src="schemas/schema2.xsd"/>
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
    <facet name="facet1" />
    <facet name="facet2" />
    <facet name="myFacet">
      <schema name="schema2"/>
    </facet>
    <doctype name="MyDocType" extends="Document">
      <schema name="schema1"/>
      <facet name="myFacet"/>
      <facet name="facet1"/>
      <facet name="facet2"/>
    </doctype>
    <doctype name="MyDocType2" extends="Document">
      <schema name="schema1"/>
      <facet name="facet1"/>
      <subtypes>
        <type>MyDocType</type>
      </subtypes>
    </doctype>
  </extension>

</component>
