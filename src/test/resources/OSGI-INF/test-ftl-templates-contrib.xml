<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.site.templates.test.ftl">

  <extension target="org.nuxeo.ecm.platform.site.rendering.SiteTemplateManagerService"
    point="template">

	<template name="folder" src="OSGI-INF/template/folder.ftl"/>
	<template name="file" src="OSGI-INF/template/subdoc.ftl"/>

  </extension>

  <extension target="org.nuxeo.ecm.platform.site.rendering.SiteTemplateManagerService"
    point="binding">

	<templateBinding templateName="folder" docType="Folder" path="*"/>
	<templateBinding templateName="file" docType="File" path="/default-domain/workspace"/>

  </extension>

</component>
