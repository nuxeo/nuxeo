<?xml version="1.0"?>

<component
  name="org.nuxeo.ecm.platform.forms.layoutDemo.complexListWidget.contrib">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="complexListWidgetLayout">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>complexListWidget</widget>
        </row>
      </rows>
      <widget name="complexListWidget" type="list">
        <labels>
          <label mode="any">complexList widget</label>
        </labels>
        <translated>false</translated>
        <fields>
          <field>lds:complexList</field>
        </fields>
        <properties widgetMode="edit">
          <property name="required">true</property>
        </properties>
        <subWidgets>
          <widget name="complexListItem" type="template">
            <labels>
              <label mode="any"></label>
            </labels>
            <properties mode="any">
              <property name="template">
                /widgets/complex_list_item_widget_template.xhtml
              </property>
            </properties>
            <!-- subwidgets for complex -->
            <subWidgets>
              <widget name="stringComplexItem" type="text">
                <fields>
                  <field>stringComplexItem</field>
                </fields>
                <labels>
                  <label mode="any">String item</label>
                </labels>
              </widget>
              <widget name="dateComplexItem" type="datetime">
                <fields>
                  <field>dateComplexItem</field>
                </fields>
                <labels>
                  <label mode="any">Date item</label>
                </labels>
                <properties widgetMode="view">
                  <property name="pattern">#{nxu:basicDateFormater()}</property>
                </properties>
                <properties widgetMode="edit">
                  <property name="format">
                    #{nxu:basicDateAndTimeFormater()}
                  </property>
                </properties>
              </widget>
              <widget name="intComplexItem" type="int">
                <fields>
                  <field>intComplexItem</field>
                </fields>
                <labels>
                  <label mode="any">Int item</label>
                </labels>
              </widget>
              <widget name="booleanComplexItem" type="checkbox">
                <fields>
                  <field>booleanComplexItem</field>
                </fields>
                <labels>
                  <label mode="any">Boolean item</label>
                </labels>
              </widget>
            </subWidgets>
          </widget>
        </subWidgets>
      </widget>
    </layout>
  </extension>

</component>