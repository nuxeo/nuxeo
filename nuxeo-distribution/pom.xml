<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo.ecm.platform</groupId>
    <artifactId>nuxeo-features-parent</artifactId>
    <version>5.4.0-I20101011_0115-CP03</version>
  </parent>

  <groupId>org.nuxeo.ecm.distribution</groupId>
  <artifactId>nuxeo-distribution</artifactId>
  <packaging>pom</packaging>
  <name>Nuxeo Distribution Parent</name>
  <description>Build package distributions of nuxeo applications</description>

  <properties>
    <nuxeo.dm.version>5.4.0-I20101011_0115</nuxeo.dm.version>
    <nuxeo.chemistry.version>5.4.0-I20101011_0115</nuxeo.chemistry.version>
    <nuxeo.distribution.version>5.4.0-I20101011_0115</nuxeo.distribution.version>
    <nuxeo.windows.version>5.4.0-I20101011_0115</nuxeo.windows.version>
  </properties>

  <modules>
    <module>nuxeo-distribution-resources</module>
  </modules>

  <profiles>
    <profile>
      <!-- Requires mono-build 2.4.x -->
      <id>xbuild-installed</id>
      <activation>
        <file>
          <exists>/usr/bin/xbuild</exists>
        </file>
      </activation>
      <modules>
        <module>nuxeo-windows-startup</module>
      </modules>
    </profile>
    <profile>
      <id>msbuild-installed</id>
      <activation>
        <os>
          <family>windows</family>
        </os>
        <file>
          <exists>C:\Windows\Microsoft.NET\Framework\v3.5\MSBuild.exe</exists>
        </file>
      </activation>
      <modules>
        <module>nuxeo-windows-startup</module>
      </modules>
    </profile>
    <profile>
      <id>shell</id>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-shell</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-ep</id>
      <modules>
        <module>nuxeo-platform-ear</module>
      </modules>
    </profile>
    <profile>
      <id>nuxeo-dm</id>
      <modules>
        <module>nuxeo-platform-ear</module>
        <module>nuxeo-distribution-dm</module>
      </modules>
    </profile>
    <profile>
      <!-- Build all JBoss distributions -->
      <id>jboss</id>
      <modules>
        <module>nuxeo-distribution-jboss</module>
      </modules>
    </profile>
    <profile>
      <!-- Build all Jetty distributions -->
      <id>jetty</id>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-server</module>
        <module>nuxeo-distribution-jetty</module>
      </modules>
    </profile>
    <profile>
      <id>gf3</id>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-server</module>
        <module>nuxeo-distribution-gf3</module>
      </modules>
    </profile>
    <profile>
      <id>tomcat</id>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-server</module>
        <module>nuxeo-distribution-jetty</module>
        <module>nuxeo-distribution-tomcat</module>
      </modules>
    </profile>
    <!-- for deployment purpose -->
    <profile>
      <id>all-distributions</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-shell</module>
        <module>nuxeo-platform-ear</module>
        <module>nuxeo-distribution-dm</module>
        <module>nuxeo-distribution-jboss</module>
        <module>nuxeo-distribution-server</module>
        <module>nuxeo-distribution-jetty</module>
        <module>nuxeo-distribution-tomcat</module>
        <module>nuxeo-distribution-jetty-base</module>
      </modules>
    </profile>
  </profiles>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-webapp</artifactId>
        <version>${nuxeo.dm.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-webapp-core</artifactId>
        <version>${nuxeo.dm.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.core</groupId>
        <artifactId>nuxeo-chemistry-impl</artifactId>
        <version>${nuxeo.chemistry.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.core</groupId>
        <artifactId>nuxeo-chemistry-bindings</artifactId>
        <version>${nuxeo.chemistry.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-dm</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>pom</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-dm</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-ear</artifactId>
        <version>${nuxeo.features.version}-CP01</version>
        <type>pom</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-jboss</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>nuxeo-dm</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-jboss</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>nuxeo-ep</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-jetty</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>nuxeo-ep</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-jetty</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>nuxeo-dm</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-tomcat</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>nuxeo-dm</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-tomcat</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>nuxeo-dm-cmis</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-shell</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-distribution-resources</artifactId>
        <version>${nuxeo.distribution.version}</version>
        <type>zip</type>
        <classifier>doc</classifier>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.distribution</groupId>
        <artifactId>nuxeo-windows-startup</artifactId>
        <version>${nuxeo.windows.version}</version>
        <type>zip</type>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <scm>
    <connection>scm:hg:http://hg.nuxeo.org/nuxeo/nuxeo-distribution</connection>
    <developerConnection>scm:hg:https://hg.nuxeo.org/nuxeo/nuxeo-distribution</developerConnection>
    <url>http://hg.nuxeo.org/nuxeo/nuxeo-distribution</url>
  </scm>

  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <name>Nuxeo virtual release repository</name>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
    <pluginRepository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <name>Nuxeo virtual snapshot repository</name>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

</project>
