<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo.ecm.distribution</groupId>
    <artifactId>nuxeo-distribution</artifactId>
    <version>5.3.1-I20091214_1830</version>
  </parent>

  <artifactId>nuxeo-distribution-jetty-base</artifactId>
  <packaging>pom</packaging>
  <name>Nuxeo Jetty Template</name>
  <description>Defines the skeleton of a jetty nuxeo application</description>

  <properties>
    <application.name>${project.artifactId}-${project.version}</application.name>
  </properties>

  <profiles>
    <profile>
      <id>embedded-standalone</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <embedded.type>all</embedded.type>
        <embedded.includeNestedJars>true</embedded.includeNestedJars>
        <embedded.excludeLibs>false</embedded.excludeLibs>
        <distribution>embedded-standalone</distribution>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-nuxeo-plugin</artifactId>
            <executions>
              <execution>
                <id>${distribution}</id>
                <phase>package</phase>
                <goals>
                  <goal>allinone</goal>
                </goals>
                <configuration>
                  <includeNestedJars>${embedded.includeNestedJars}</includeNestedJars>
                  <excludeLibs>${embedded.excludeLibs}</excludeLibs>
                  <src>${basedir}/target/${application.name}.zip</src>
                  <target>${basedir}/target/${application.name}-${embedded.type}.jar</target>
                  <launcher>org.nuxeo.ecm.distribution:nuxeo-embedded-launcher:${project.version}</launcher>
                </configuration>
              </execution>
              <execution>
                <id>attach-all</id>
                <phase>package</phase>
                <goals>
                  <goal>attach</goal>
                </goals>
                <configuration>
                  <file>${basedir}/target/${application.name}-${embedded.type}.jar</file>
                  <type>jar</type>
                  <classifier>${embedded.type}</classifier>
                </configuration>
              </execution>

            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>embedded-osgi</id>
      <properties>
        <embedded.type>osgi</embedded.type>
        <embedded.includeNestedJars>true</embedded.includeNestedJars>
        <embedded.excludeLibs>false</embedded.excludeLibs>
        <distribution>embedded-osgi</distribution>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-nuxeo-plugin</artifactId>
            <executions>
              <execution>
                <id>${distribution}</id>
                <phase>package</phase>
                <goals>
                  <goal>allinone</goal>
                </goals>
                <configuration>
                  <includeNestedJars>${embedded.includeNestedJars}</includeNestedJars>
                  <excludeLibs>${embedded.excludeLibs}</excludeLibs>
                  <src>${basedir}/target/${application.name}.zip</src>
                  <target>${basedir}/target/${application.name}-${embedded.type}.jar</target>
                  <launcher>org.nuxeo.ecm.distribution:nuxeo-embedded-launcher:${project.version}</launcher>
                </configuration>
              </execution>
              <execution>
                <id>attach-all</id>
                <phase>package</phase>
                <goals>
                  <goal>attach</goal>
                </goals>
                <configuration>
                  <file>${basedir}/target/${application.name}-${embedded.type}.jar</file>
                  <type>jar</type>
                  <classifier>${embedded.type}</classifier>
                </configuration>
              </execution>

            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>embedded-minimal</id>
      <properties>
        <embedded.type>minimal</embedded.type>
        <embedded.includeNestedJars>false</embedded.includeNestedJars>
        <embedded.excludeLibs>true</embedded.excludeLibs>
        <distribution>embedded-minimal</distribution>
      </properties>
    </profile>
  </profiles>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-nuxeo-plugin</artifactId>
        <extensions>false</extensions>
        <executions>
          <execution>
            <id>assemble-app</id>
            <phase>package</phase>
            <goals>
              <goal>assembly</goal>
            </goals>
            <configuration>
              <runPreprocessor>false</runPreprocessor>
              <format>zip</format>
              <zipRoot>${application.name}</zipRoot>
              <outputDirectory>target</outputDirectory>
              <targetFile>${application.name}</targetFile>
              <descriptor>
                ${basedir}/src/main/assemble/assembly.xml
              </descriptor>
            </configuration>
          </execution>
          <execution>
            <id>attach-app</id>
            <phase>package</phase>
            <goals>
              <goal>attach</goal>
            </goals>
            <configuration>
              <file>${basedir}/target/${application.name}.zip</file>
              <type>zip</type>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
