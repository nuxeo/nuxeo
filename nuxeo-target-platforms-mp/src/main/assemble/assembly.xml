<project name="nuxeo-targetplatforms-mp-assembly"
         default="build"
         xmlns:nx="urn:nuxeo-build"
         xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml" uri="urn:nuxeo-artifact" />

  <target name="build" description="Build Nuxeo Target Platforms Marketplace Package">
    <tstamp />
    <delete failonerror="false" dir="${maven.project.build.directory}/marketplace" />
    <mkdir dir="${maven.project.build.directory}/marketplace" />
    <copy todir="${maven.project.build.directory}/marketplace">
      <fileset dir="src/main/resources" />
      <filterset>
        <filter token="VERSION" value="${maven.project.version}" />
        <filter token="DISTRIB_VERSION" value="${nuxeo.base.version}" />
      </filterset>
    </copy>

    <copy todir="${maven.project.build.directory}/marketplace/install/bundles">
      <artifact:file key="org.nuxeo.utils:nuxeo-target-platforms-api" />
      <artifact:file key="org.nuxeo.utils:nuxeo-target-platforms-core" />
      <artifact:file key="org.nuxeo.utils:nuxeo-target-platforms-io" />
      <artifact:file key="org.nuxeo.utils:nuxeo-target-platforms-jaxrs" />
      <artifact:file key="org.nuxeo.utils:nuxeo-target-platforms-jsf" />
    </copy>

    <zip destfile="${maven.project.build.directory}/${maven.project.artifactId}-${maven.project.version}.zip"
         basedir="${maven.project.build.directory}/marketplace" />
    <artifact:attach file="${maven.project.build.directory}/${maven.project.artifactId}-${maven.project.version}.zip"
                     type="zip" />
  </target>

</project>
