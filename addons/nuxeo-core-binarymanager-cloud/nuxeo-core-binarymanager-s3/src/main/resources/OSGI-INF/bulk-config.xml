<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.storage.s3.bulk.config" version="1.0.0">

  <require>org.nuxeo.runtime.stream.service</require>

  <extension target="org.nuxeo.ecm.core.bulk" point="actions">
    <action name="s3SetContentLength" bucketSize="100" batchSize="25" httpEnabled="true"/>
  </extension>

  <extension target="org.nuxeo.runtime.stream.service" point="streamProcessor">
    <streamProcessor name="s3SetContentLength" class="org.nuxeo.ecm.core.bulk.S3SetContentLengthAction" logConfig="bulk"
      defaultConcurrency="4" defaultPartitions="4">
      <policy name="default" maxRetries="3" delay="500ms" maxDelay="10s" continueOnFailure="false" />
    </streamProcessor>

  </extension>

</component>
