  <extension target="web#STD-AUTH-FILTER">
    <filter-mapping>
      <filter-name>NuxeoAuthenticationFilter</filter-name>
      <url-pattern>/layoutDemo/*</url-pattern>
      <url-pattern>/layoutDemoPreview/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
  </extension>

  <install>

    <!-- unzip the war template -->
    <unzip from="${bundle.fileName}" to="/" prefix="web">
      <include>web/nuxeo.war/**</include>
    </unzip>

    <!-- append translations -->
    <delete path="${bundle.fileName}.tmp" />
    <mkdir path="${bundle.fileName}.tmp" />
    <unzip from="${bundle.fileName}" to="${bundle.fileName}.tmp">
      <include>OSGI-INF/l10n/**</include>
    </unzip>
    <append from="${bundle.fileName}.tmp/OSGI-INF/l10n/messages_en_US.properties"
      to="nuxeo.war/WEB-INF/classes/messages.properties" addNewLine="true" />
    <append from="${bundle.fileName}.tmp/OSGI-INF/l10n/messages_en_US.properties"
      to="nuxeo.war/WEB-INF/classes/messages_en.properties" addNewLine="true" />
    <append from="${bundle.fileName}.tmp/OSGI-INF/l10n/messages_en_US.properties"
      to="nuxeo.war/WEB-INF/classes/messages_en_US.properties" addNewLine="true" />
    <delete path="${bundle.fileName}.tmp" />

    <!-- make some extension source s available for demo -->
    <unzip from="${bundle.fileName}" to="/nuxeo.war/layoutDemo/sources/">
      <include>OSGI-INF/demo/**</include>
      <include>schemas/**</include>
    </unzip>


  </install>

