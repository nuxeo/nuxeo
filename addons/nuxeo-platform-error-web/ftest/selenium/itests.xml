<project name="selenium-tests" xmlns:nx="urn:nuxeo-build"
  default="run-selenium"
  xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml" uri="urn:nuxeo-artifact" />
  <taskdef resource="net/sf/antcontrib/antlib.xml" />

  <property name="suites" value="suite" />
  <property name="out.dir" value="${maven.project.build.directory}" />
  <unzip dest="${out.dir}/" overwrite="false">
    <artifact:resolveFile key="org.nuxeo:nuxeo-ftest::zip" />
  </unzip>
  <import file="${out.dir}/nuxeo-ftest.xml" />

  <target name="download" unless="no.download">
    <echo level="info" message="Downloading for tests ${groupId}:${artifactId}:${nuxeo.distribution.version}:zip:${classifier}" />
    <delete failonerror="false" dir="${nuxeo.home}" />
    <unzip dest="${nuxeo.home}/">
      <artifact:file key="${groupId}:${artifactId}:${nuxeo.distribution.version}:zip:${classifier}" />
      <cutdirsmapper dirs="1" />
    </unzip>
    <copy todir="${nuxeo.nxserver}/bundles/">
      <artifact:file key="org.nuxeo.ecm.platform:nuxeo-platform-error-web:${maven.project.version}:jar" />
    </copy>
  </target>

</project>
