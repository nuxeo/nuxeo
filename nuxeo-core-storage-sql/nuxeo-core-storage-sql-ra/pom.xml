  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <excludes>
          <exclude>META-INF/jboss/ra.xml</exclude>
          <exclude>META-INF/sun/ra.xml</exclude>
        </excludes>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-rar-plugin</artifactId>
        <configuration>
          <rarSourceDirectory>${project.build.outputDirectory}</rarSourceDirectory> <!-- little workaround to include class files -->
          <manifestFile>${project.build.directory}/classes/META-INF/MANIFEST.MF</manifestFile>
          <includeJar>false</includeJar>
        </configuration>
        <executions>
          <execution>
            <id>j2ee</id>
            <goals>
              <goal>rar</goal>
            </goals>
            <configuration>
              <raXmlFile>${raXml-j2ee}</raXmlFile>
              <finalName>${project.build.finalName}-j2ee</finalName>
            </configuration>
          </execution>
          <execution>
            <id>jboss</id>
            <goals>
              <goal>rar</goal>
            </goals>
            <configuration>
              <raXmlFile>${raXml-jboss}</raXmlFile>
              <finalName>${project.build.finalName}</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>${project.build.directory}/${project.artifactId}-${project.version}.rar</file>
                  <type>jar</type>
                </artifact>
                <artifact>
                  <file>${project.build.directory}/${project.artifactId}-${project.version}-j2ee.rar</file>
                  <type>rar</type>
                  <classifier>j2ee</classifier>
                </artifact>
                <artifact>
                  <file>${project.build.directory}/${project.artifactId}-${project.version}-j2ee.rar</file>
                  <type>jar</type>
                  <classifier>j2ee</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

