<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo.ecm.platform</groupId>
    <artifactId>nuxeo-platform-parent</artifactId>
    <version>5.2-20081231</version>
  </parent>

  <artifactId>nuxeo-platform-workflow-document-facade</artifactId>
  <packaging>ejb</packaging>
  <name>Nuxeo Workflow Service - Document Management Facade</name>
  <description>
    Nuxeo Enterprise Platform: Java EE facade for the document management
    service of the Workflow Service.
  </description>

  <dependencies>
    <dependency>
      <groupId>org.nuxeo.ecm.core</groupId>
      <artifactId>nuxeo-core-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-workflow-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-workflow-document-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-events-api</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.persistence</groupId>
      <artifactId>persistence</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.ejb</groupId>
      <artifactId>ejb-api</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.annotation</groupId>
      <artifactId>jsr250-api</artifactId>
    </dependency>
    <!-- jboss-j2ee is required for EJBException class ??? -->
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss-j2ee</artifactId>
    </dependency>

    <!-- test scope -->
    <dependency>
      <groupId>org.nuxeo.runtime</groupId>
      <artifactId>nuxeo-runtime-osgi</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.ecm.platform</groupId>
      <artifactId>nuxeo-platform-workflow-document</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>**/TestWorkflowDocumentBeanRemote*.class</exclude>
            <exclude>**/TestWorkItemsListsBeanRemote*.class</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ejb-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <Bundle-Category>web,stateful</Bundle-Category>
              <Require-Bundle>
                org.nuxeo.ecm.platform.workflow.document
              </Require-Bundle>
              <Nuxeo-Component>
                OSGI-INF/nxworkflow-document-facade-platform-contrib.xml
              </Nuxeo-Component>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>replace-deployment-fragment</id>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <echo message="Replacing deployment-fragment.xml ..." />
                <copy
                  file="src-remote/main/resources/OSGI-INF/deployment-fragment.xml"
                  todir="${project.build.directory}/classes/OSGI-INF"
                  overwrite="true" />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <!-- build an artifact with implementations needed on client side but without persistence -->
          <execution>
            <id>remote-api</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>remote-api</classifier>
              <includes>
                <include>**/WorkItemEntryImpl*</include>
                <include>**/WorkItemsListEntryImpl*</include>
                <include>**/deployment-fragment.xml</include>
              </includes>
              <archive>
                <manifestEntries>
                  <Bundle-Category>stateless</Bundle-Category>
                </manifestEntries>
              </archive>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
