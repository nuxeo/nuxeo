<?xml version="1.0"?>

<!DOCTYPE facelet-taglib PUBLIC
  "-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
  "http://java.sun.com/dtd/facelet-taglib_1_0.dtd">

<facelet-taglib>
  <namespace>http://nuxeo.org/nxweb/resources</namespace>

  <tag>
    <tag-name>resource</tag-name>
    <component>
      <component-type>javax.faces.Output</component-type>
      <renderer-type>org.nuxeo.ecm.web.resources.jsf.Resource</renderer-type>
      <handler-class>
        com.sun.faces.facelets.tag.jsf.html.ScriptResourceHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>bundle</tag-name>
    <handler-class>
      org.nuxeo.ecm.web.resources.jsf.handler.ResourceBundleHandler
    </handler-class>
  </tag>

  <tag>
    <tag-name>insert</tag-name>
    <component>
      <component-type>javax.faces.Output</component-type>
      <renderer-type>org.nuxeo.ecm.web.resources.jsf.ResourceBundle</renderer-type>
      <handler-class>
        org.nuxeo.ecm.web.resources.jsf.handler.ResourceBundleHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>import</tag-name>
    <component>
      <component-type>javax.faces.Output</component-type>
      <renderer-type>org.nuxeo.ecm.web.resources.jsf.Import</renderer-type>
      <handler-class>
        com.sun.faces.facelets.tag.jsf.html.ScriptResourceHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>importResource</tag-name>
    <component>
      <component-type>javax.faces.Output</component-type>
      <renderer-type>org.nuxeo.ecm.web.resources.jsf.ImportResource</renderer-type>
      <handler-class>
        com.sun.faces.facelets.tag.jsf.html.ScriptResourceHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>meta</tag-name>
    <component>
      <component-type>
        org.nuxeo.ecm.web.resources.jsf.component.UIMeta
      </component-type>
    </component>
  </tag>

  <tag>
    <tag-name>favicon</tag-name>
    <component>
      <component-type>
        org.nuxeo.ecm.web.resources.jsf.component.UIFavicon
      </component-type>
    </component>
  </tag>

</facelet-taglib>