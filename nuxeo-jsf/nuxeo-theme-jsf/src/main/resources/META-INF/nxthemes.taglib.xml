<?xml version="1.0"?>

<!DOCTYPE facelet-taglib PUBLIC
  "-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
  "http://java.sun.com/dtd/facelet-taglib_1_0.dtd">

<facelet-taglib>
  <namespace>http://nuxeo.org/nxthemes</namespace>

  <tag>
    <tag-name>composition</tag-name>
    <handler-class>
      org.nuxeo.theme.jsf.facelets.CompositionHandler
    </handler-class>
  </tag>

  <tag>
    <tag-name>model</tag-name>
    <component>
      <component-type>nxthemes.model</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>view</tag-name>
    <component>
      <component-type>nxthemes.view</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>controller</tag-name>
    <component>
      <component-type>nxthemes.controller</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>button</tag-name>
    <component>
      <component-type>nxthemes.button</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>tabs</tag-name>
    <component>
      <component-type>nxthemes.tabs</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>tab</tag-name>
    <component>
      <component-type>nxthemes.tab</component-type>
    </component>
  </tag>


  <tag>
    <tag-name>panel</tag-name>
    <component>
      <component-type>nxthemes.panel</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>resources</tag-name>
    <component>
      <component-type>nxthemes.resources</component-type>
      <renderer-type>org.nuxeo.theme.jsf.component.UIResources</renderer-type>
      <handler-class>
        com.sun.faces.facelets.tag.jsf.html.ScriptResourceHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>fragment</tag-name>
    <component>
      <component-type>nxthemes.fragment</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>accesskeys</tag-name>
    <component>
      <component-type>nxthemes.accesskeys</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>head</tag-name>
    <component>
      <component-type>nxthemes.head</component-type>
    </component>
  </tag>

  <tag>
    <tag-name>themestyles</tag-name>
    <component>
      <component-type>nxthemes.themestyles</component-type>
      <renderer-type>org.nuxeo.theme.jsf.component.UIThemeStyles</renderer-type>
      <handler-class>
        com.sun.faces.facelets.tag.jsf.html.StylesheetResourceHandler
      </handler-class>
    </component>
  </tag>

  <tag>
    <tag-name>require</tag-name>
    <component>
      <component-type>nxthemes.require</component-type>
    </component>
  </tag>


</facelet-taglib>
