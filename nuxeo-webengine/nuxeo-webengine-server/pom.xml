  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-nuxeo-plugin</artifactId>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>assemble-app</id>
            <phase>package</phase>
            <goals>
              <goal>assembly</goal>
            </goals>
            <configuration>
              <runPreprocessor>false</runPreprocessor>
              <!--format>directory</format-->
              <format>zip</format>
              <outputDirectory>target</outputDirectory>
              <targetFile>nuxeo-server</targetFile>
              <descriptor>${basedir}/src/main/assemble/assembly.xml</descriptor>
            </configuration>
          </execution>
          <execution>
            <id>attach-app</id>
            <phase>package</phase>
            <goals>
              <goal>attach</goal>
            </goals>
            <configuration>
              <file>${basedir}/target/nuxeo-server.zip</file>
              <type>zip</type>
              <classifier>template</classifier>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

