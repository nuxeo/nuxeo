<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo.docker</groupId>
    <artifactId>nuxeo-docker-images</artifactId>
    <version>11.1-SNAPSHOT</version>
  </parent>

  <artifactId>nuxeo-builder-platform-docker-image</artifactId>
  <name>Nuxeo Builder Platform Docker Image</name>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.nuxeo.docker</groupId>
      <artifactId>nuxeo-builder-docker-image</artifactId>
      <type>pom</type>
    </dependency>

    <dependency>
      <groupId>org.nuxeo.packages</groupId>
      <artifactId>nuxeo-adobe-connector-package</artifactId>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.packages</groupId>
      <artifactId>nuxeo-csv-package</artifactId>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.packages</groupId>
      <artifactId>nuxeo-dam-package</artifactId>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.packages</groupId>
      <artifactId>nuxeo-drive-package</artifactId>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.packages</groupId>
      <artifactId>nuxeo-easyshare-package</artifactId>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.packages</groupId>
      <artifactId>nuxeo-liveconnect-package</artifactId>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.packages</groupId>
      <artifactId>nuxeo-template-rendering-package</artifactId>
      <type>zip</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-packages</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>org.nuxeo.packages</includeGroupIds>
              <outputDirectory>${project.build.directory}/packages</outputDirectory>
              <overWriteIfNewer>true</overWriteIfNewer>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>dockerfile-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>build</goal>
              <goal>tag</goal>
            </goals>
            <configuration>
              <repository>nuxeo/builder-platform</repository>
              <tag>${nuxeo.platform.version}</tag>
              <buildArgs>
                <BASE_IMAGE>nuxeo/builder:${nuxeo.platform.version}</BASE_IMAGE>
              </buildArgs>
              <pullNewerImage>false</pullNewerImage>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
