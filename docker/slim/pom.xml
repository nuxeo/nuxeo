<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo.docker</groupId>
    <artifactId>nuxeo-docker-images</artifactId>
    <version>11.1-SNAPSHOT</version>
  </parent>

  <artifactId>nuxeo-slim-docker-image</artifactId>
  <name>Nuxeo Slim Docker Image</name>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.nuxeo.docker</groupId>
      <artifactId>nuxeo-base-docker-image</artifactId>
      <classifier>docker-info</classifier>
    </dependency>
    <dependency>
      <groupId>org.nuxeo.docker</groupId>
      <artifactId>nuxeo-builder-docker-image</artifactId>
      <classifier>docker-info</classifier>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>dockerfile-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>build</goal>
              <goal>tag</goal>
            </goals>
            <configuration>
              <repository>nuxeo/nuxeo</repository>
              <tag>${nuxeo.platform.version}</tag>
              <buildArgs>
                <BUILDER_IMAGE>nuxeo/builder:${nuxeo.platform.version}</BUILDER_IMAGE>
                <BASE_IMAGE>nuxeo/base:${nuxeo.platform.version}</BASE_IMAGE>
              </buildArgs>
              <pullNewerImage>false</pullNewerImage>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
