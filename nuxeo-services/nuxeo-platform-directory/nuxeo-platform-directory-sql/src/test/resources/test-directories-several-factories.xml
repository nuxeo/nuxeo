<?xml version="1.0"?>

<!-- This is a test setup for the directory service, mixing a directory registration
  in several factories, see NXP-6574 -->

<component name="org.nuxeo.ecm.directory.several.factories">

  <!-- register an existing directory to the new factory -->
  <extension target="org.nuxeo.ecm.directory.service.MockMemoryDirectoryFactory"
    point="directories">
    <directory name="userDirectory">
      <schema>user</schema>
      <types>
        <type>system</type>
      </types>
      <idField>username</idField>
    </directory>
  </extension>

  <!-- then register a different directory with SQL factory => bug shows that the
    previous directory is retrieved (from the wrong factory) instead -->
  <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
    point="directories">

    <directory name="myOtherNewDirectory">
      <schema>user</schema>
      <types>
        <type>system</type>
      </types>
      <dataSource>java:/nxsqldirectory</dataSource>
      <table>other</table>
      <createTablePolicy>always</createTablePolicy>
      <idField>username</idField>

      <references>
        <tableReference field="groups" directory="groupDirectory"
          table="user2group" sourceColumn="userId"
          targetColumn="groupId" dataFile="test-user2group.csv" />
      </references>
    </directory>

  </extension>

</component>
