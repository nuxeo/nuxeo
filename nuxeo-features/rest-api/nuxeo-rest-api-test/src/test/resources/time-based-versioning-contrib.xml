<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.time.based.versioning" version="1.0">

  <require>org.nuxeo.ecm.platform.el.service</require>

  <extension target="org.nuxeo.ecm.core.versioning.VersioningService" point="policies">
    <policy id="time-based-versioning-policy" increment="MAJOR" order="2">
      <filter-id>time-based-versioning-filter</filter-id>
    </policy>
  </extension>

  <extension target="org.nuxeo.ecm.core.versioning.VersioningService" point="filters">
    <filter id="time-based-versioning-filter">
      <schema>file</schema>
      <condition>#{currentDocument.dc.modified.time - previousDocument.dc.modified.time >= 500}</condition>
    </filter>
  </extension>

</component>
