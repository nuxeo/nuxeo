<?xml version="1.0"?>
<component name="test-directory-contrib">

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="intIdSchema" src="schemas/intIdSchema.xsd"/>
  </extension>

  <extension target="org.nuxeo.ecm.directory.GenericDirectory"
    point="directories">

    <directory name="intIdTestDir" extends="template-directory">
      <schema>intIdSchema</schema>
      <types>
        <type>system</type>
      </types>
      <createTablePolicy>always</createTablePolicy>
      <idField>id</idField>
      <autoincrementIdField>true</autoincrementIdField>
    </directory>

  </extension>

  <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
    point="directories">

    <directory name="testdir">
      <schema>vocabulary</schema>
      <types>
        <type>system</type>
        <type>tata</type>
      </types>
      <dataSource>java:/nxsqldirectory</dataSource>
      <cacheTimeout>3600</cacheTimeout>
      <cacheMaxSize>1000</cacheMaxSize>
      <table>testdir</table>
      <idField>id</idField>
      <autoincrementIdField>false</autoincrementIdField>
      <createTablePolicy>always</createTablePolicy>
      <dataFile>testdir.csv</dataFile>
    </directory>

    <directory name="country">
      <schema>xvocabulary</schema>
      <types>
        <type>toto</type>
      </types>
      <parentDirectory>continent</parentDirectory>
      <dataSource>java:/nxsqldirectory</dataSource>
      <table>country</table>
      <idField>id</idField>
      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>country.csv</dataFile>
      <createTablePolicy>on_missing_columns</createTablePolicy>
    </directory>

    <directory name="continent">
      <schema>vocabulary</schema>
      <types>
        <type>pouet</type>
        <type>poum</type>
      </types>
      <dataSource>java:/nxsqldirectory</dataSource>
      <table>continent</table>
      <idField>id</idField>
      <autoincrementIdField>false</autoincrementIdField>
      <dataFile>continent.csv</dataFile>
      <createTablePolicy>on_missing_columns</createTablePolicy>
      <deleteConstraint
        class="org.nuxeo.ecm.directory.HierarchicalDirectoryDeleteConstraint">
        <property name="targetDirectory">country</property>
        <property name="targetDirectoryField">parent</property>
      </deleteConstraint>
    </directory>

  </extension>
</component>
