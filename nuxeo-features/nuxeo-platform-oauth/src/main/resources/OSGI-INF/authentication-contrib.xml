<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.oauth.auth.defaultConfig">

  <extension
      target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
      point="preFilter">

      <preFilter name="OAuth" class="org.nuxeo.ecm.platform.ui.web.auth.oauth.NuxeoOAuthFilter"/>
      <preFilter name="OAuth2" class="org.nuxeo.ecm.platform.ui.web.auth.oauth2.NuxeoOAuth2Filter"/>

  </extension>

  <extension
    target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
    point="startURL">

    <startURLPattern>
      <patterns>
        <pattern>oauth2Grant.jsp</pattern>
      </patterns>
    </startURLPattern>

  </extension>

</component>
