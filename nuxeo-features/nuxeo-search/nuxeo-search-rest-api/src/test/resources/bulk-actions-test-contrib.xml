<?xml version="1.0"?>

<component name="org.nuxeo.ecm.automation.rest.bulk.test.contrib">

  <require>org.nuxeo.runtime.stream.service</require>

  <extension target="org.nuxeo.ecm.core.bulk" point="actions">
    <action name="removeDocuments" httpEnabled="true" />
  </extension>

  <extension target="org.nuxeo.runtime.stream.service" point="streamProcessor">

    <streamProcessor name="removeDocuments" class="org.nuxeo.ecm.restapi.server.jaxrs.search.test.bulk.RemoveDocumentAction" logConfig="bulk"
      defaultConcurrency="1" defaultPartitions="1">
      <option name="batchSize">50</option>
      <option name="batchThresholdMs">200</option>
    </streamProcessor>

  </extension>

</component>
