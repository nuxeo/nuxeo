      <scope>test</scope>
    </dependency>
  </dependencies>

  <profiles>
    <!-- Used for multi-database tests -->
    <profile>
      <id>customdb</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.nuxeo.build</groupId>
            <artifactId>ant-assembly-maven-plugin</artifactId>
            <inherited>false</inherited>
            <executions>
              <execution>
                <id>setup-vcs</id>
                <phase>initialize</phase>
                <goals>
                  <goal>build</goal>
                </goals>
                <configuration>
                  <buildFiles>
                    <buildFile>${basedir}/../../integration/vcstests.xml</buildFile>
                  </buildFiles>
                  <targets>
                    <target>vcs-tests-setup</target>
                    <target>prepare-db</target>
                  </targets>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>properties-maven-plugin</artifactId>
            <executions>
              <execution>
                <phase>initialize</phase>
                <goals>
                  <goal>read-project-properties</goal>
                </goals>
                <configuration>
                  <files>
                    <file>${user.home}/nuxeo-test-vcs.properties</file>
                  </files>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>addons</id>
      <dependencyManagement>
        <dependencies>
          <dependency>
            <groupId>org.nuxeo</groupId>
            <artifactId>nuxeo-addons-core-parent</artifactId>
            <version>${nuxeo.addons.core.version}</version>
            <type>pom</type>
            <scope>import</scope>
          </dependency>
        </dependencies>
      </dependencyManagement>
    </profile>
    <profile>
      <id>marklogic</id>
      <dependencies>
        <dependency>
          <groupId>org.nuxeo.ecm.core</groupId>
          <artifactId>nuxeo-core-storage-marklogic</artifactId>
          <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>org.nuxeo.ecm.core</groupId>
          <artifactId>nuxeo-core-storage-marklogic</artifactId>
          <type>test-jar</type>
          <scope>test</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

</project>
