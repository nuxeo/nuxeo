<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.versioning.test.always-minor">

  <extension target="org.nuxeo.ecm.core.versioning.VersioningService" point="restrictions">
    <restriction type="File">
      <options lifeCycleState="*">
        <option default="true">NONE</option>
        <option>MINOR</option>
        <option>MAJOR</option>
      </options>
    </restriction>
    <restriction type="*">
      <options lifeCycleState="*">
        <option>MAJOR</option>
      </options>
    </restriction>
  </extension>

</component>
