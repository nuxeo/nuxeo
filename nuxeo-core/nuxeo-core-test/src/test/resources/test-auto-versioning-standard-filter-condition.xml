<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.versioning.test.custom-filter">

  <extension target="org.nuxeo.ecm.core.versioning.VersioningService" point="policies">
    <policy id="custom-filter" increment="MINOR">
      <filter-id>standard</filter-id>
    </policy>
  </extension>

  <extension target="org.nuxeo.ecm.core.versioning.VersioningService" point="filters">
    <filter id="standard">
      <condition>#{previousDocument != null &amp;&amp; previousDocument.dc.title != currentDocument.dc.title}</condition>
    </filter>
  </extension>

</component>
