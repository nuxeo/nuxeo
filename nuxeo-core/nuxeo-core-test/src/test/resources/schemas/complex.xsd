<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:nxs="http://www.nuxeo.org/ecm/schemas/complex/"
           targetNamespace="http://www.nuxeo.org/ecm/schemas/complex/">

   <xs:element name="complex" type="nxs:complex"/>
   <xs:element name="complex2" type="nxs:complex"/>
   <xs:simpleType name="stringLimited">
      <xs:restriction base="xs:string">
         <xs:maxLength value="20" />
      </xs:restriction>
   </xs:simpleType>

   <xs:complexType name="complex">
      <xs:sequence>
         <xs:element name="foo" type="nxs:stringLimited"/>
         <xs:element name="bar" type="xs:string"/>
      </xs:sequence>
   </xs:complexType>

</xs:schema>
