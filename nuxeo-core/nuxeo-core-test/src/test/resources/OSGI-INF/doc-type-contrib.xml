<?xml version="1.0"?>
<component name="org.nuxeo.io.test.doctypes">

  <require>org.nuxeo.ecm.core.CoreExtensions</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="complexSchema" src="schema/complex-schema.xsd" prefix="cs" />
    <schema name="documentResolver" src="schema/documentResolver.xsd" prefix="dr" />
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">

    <doctype name="CSDoc" extends="File">
      <schema name="complexSchema" />
    </doctype>

    <doctype name="RefDoc">
      <schema name="dublincore" />
      <schema name="documentResolver" />
      <facet name="Folderish"/>
    </doctype>

    <doctype name="DummyDoc">
      <facet name="Folderish"/>
    </doctype>

    <doctype name="MyFolderRoot">
      <subtypes>
        <type>MyFolder</type>
        <type>MyFolder2</type>
      </subtypes>
    </doctype>

    <doctype name="MyFolder" extends="Document">
      <facet name="Folderish"/>
      <subtypes>
        <type>File</type>
        <type>CSDoc</type>
        <type>RefDoc</type>
      </subtypes>
    </doctype>

    <doctype name="MyFolder2" extends="MyFolder">
      <facet name="HiddenInCreation"/>
      <subtypes>
        <type>DummyDoc</type>
      </subtypes>
    </doctype>

  </extension>

</component>
